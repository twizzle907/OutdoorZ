<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OutdoorZ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-2.2.1.js")<!--Added via API tutorial 2/26/16-->
    @*<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script> Is it necessary to include this old version of JQuery when the line just above this includes a newer version? I think not: Firefox actually doesn't load this because it uses HTTP. -James*@
    @Scripts.Render("~/Scripts/knockout-2.0.0.js")<!--Added via API tutorial 2/26/16-->
    @Scripts.Render("~/Scripts/knockout.mapping-latest.js")<!--Added via API tutorial 2/26/16-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'>
                    <img src='@Url.Content("~/images/OutdoorZLogo.png")' />
                    @*@Html.ActionLink("OutdoorZ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                </a>
</div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Activities", "Index", "Activity")</li>
                    <li>@Html.ActionLink("Organizations", "Index", "Organization")</li>*@
                    <li>@Html.ActionLink("Manage Users", "Index", "UserViewModel")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.ActionLink("User Profiles", "Index", "UserProfile")</li>*@
                    <li>@Html.ActionLink("Map", "Index", "Map")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href='@Url.Action("About", "Home")'>
    <img src='@Url.Content("~/images/BSTLogo.jpg")' /> </a>
</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
